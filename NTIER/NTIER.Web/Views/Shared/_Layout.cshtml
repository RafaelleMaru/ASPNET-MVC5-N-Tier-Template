@using NTIER.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <title>@ViewBag.Title | @NTIER.Common.Constants.ProjectName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">

    </script>

    @RenderSection("Styles", required: false)

</head>
<body>
    <base href='@Url.Content("~/")'>

<div id="wrapper">


    <nav class="navbar-default navbar-static-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <h1>
                <a class="navbar-brand" href="index.html">NTIER</a>
            </h1>
        </div>
        <div class=" border-bottom">
            <div class="full-left">
                <section class="full-top">
                    <button id="toggle"><i class="fa fa-arrows-alt"></i></button>
                </section>
                <!--
                <form class=" navbar-left-right">
                    <input type="text" value="Search..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search...';}">
                    <input type="submit" value="" class="fa fa-search">
                </form>
                -->

                <div class="clearfix"> </div>
            </div>


            <!-- Brand and toggle get grouped for better mobile display -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="drop-men">
                <ul class=" nav_1">

                    <li class="dropdown at-drop">
                        <a href="#" class="dropdown-toggle dropdown-at " data-toggle="dropdown"><i class="fa fa-globe"></i> <span class="number">1</span></a>
                        <ul class="dropdown-menu menu1 " role="menu">
                            <li>
                                <a href="#">

                                    <div class="user-new">
                                        <p>New user registered</p>
                                        <span>40 seconds ago</span>
                                    </div>
                                    <div class="user-new-left">

                                        <i class="fa fa-user-plus"></i>

                                    </div>
                                    <div class="clearfix"> </div>
                                </a>
                            </li>


                            <li><a href="#" class="view">View all notifications</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle dropdown-at" data-toggle="dropdown"><span class=" name-caret"> @ViewBag.CurrentUser.UserFullname <i class="caret"></i></span><img src="#" class="user-icon"></a>
                        <ul class="dropdown-menu " role="menu">
                            <li><a href="profile.html"><i class="fa fa-user"></i>Edit Profile</a></li>

                            <li><a href="calendar.html"><i class="fa fa-calendar"></i>Calendar</a></li>

                            @Html.Partial("_LoginPartial")


                        </ul>
                    </li>

                </ul>
            </div><!-- /.navbar-collapse -->
            <div class="clearfix">

            </div>

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li>
                            <a href="@Url.Action("Index","Dashboard")" class=" hvr-bounce-to-right"><i class="fa fa-dashboard nav_icon "></i><span class="nav-label">Dashboards</span> </a>
                        </li>

                    @if ((ViewBag.CurrentUser.GetModulePermission((int) NTIER.Common.EnumModule.User) & NTIER.Common.EnumPermission.View) == NTIER.Common.EnumPermission.View ||
                         (ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.User) & NTIER.Common.EnumPermission.ListView) == NTIER.Common.EnumPermission.ListView||
                         (ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.UserType) & NTIER.Common.EnumPermission.View) == NTIER.Common.EnumPermission.View ||
                         (ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.UserType) & NTIER.Common.EnumPermission.ListView) == NTIER.Common.EnumPermission.ListView)
                    {
                        <li>
                            <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-user nav_icon"></i> <span class="nav-label">User</span><span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">

                             @if ((ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.User) & NTIER.Common.EnumPermission.View) == NTIER.Common.EnumPermission.View ||
                            (ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.User) & NTIER.Common.EnumPermission.ListView) == NTIER.Common.EnumPermission.ListView)
                            {
                            <li class="active">
                                <a href="@Url.Action("Index", "User")" class=" hvr-bounce-to-right"><i class="fa fa-list-alt nav_icon"></i> <span class="nav-label">User List</span></a>
                            </li>
                            }
                            @if ((ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.UserType) & NTIER.Common.EnumPermission.View) == NTIER.Common.EnumPermission.View ||
                                 (ViewBag.CurrentUser.GetModulePermission((int)NTIER.Common.EnumModule.UserType) & NTIER.Common.EnumPermission.ListView) == NTIER.Common.EnumPermission.ListView)
                            {
                            <li><a href="@Url.Action("Index", "UserType")" class=" hvr-bounce-to-right"> <i class="fa fa-users nav_icon"></i>User Type</a></li>

                            }
                            </ul>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="content-main">

                
            <!--faq-->
            @RenderBody()

            <!--//faq-->
            <!---->

            <div class="copy">
                <p> &copy; 2018 Collabor8 Digital HRIS. All Rights Reserved </p>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>


</div>
    
    
    
    
<!-- Genertic Modal Prompt -->
<div class="modal fade" id="genericModal" tabindex="-1" role="dialog" aria-labelledby="genericModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="genericModalTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body" id="genericModalBody">
                
            </div>


            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>

                </div>
            </div>


            </div>
    </div>
</div><!--end of modal promt-->
    
    



@Scripts.Render("~/bundles/themejs")

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", required: false)
</body>
</html>
