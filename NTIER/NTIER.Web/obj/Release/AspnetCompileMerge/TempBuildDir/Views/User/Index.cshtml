
@{
    ViewBag.Title = "User List";
}




<div class="grid-system">


    <div class="horz-grid">
        <div style="width: 90%; margin: 0 auto;" class="">

            <button id="create-data" class="btn btn-default btn-sm">Create new user</button>

            <hr />

            <table id="datatable" class="display responsive nowrap dataTable no-footer dtr-inline collapsed table-hover">

                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Active</th>
                        <th>Action</th>

                    </tr>
                </thead>

            </table>
        </div>
    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="modal-form">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <input id="UserId" name="UserId" type="hidden" />

                <!-- Select -->
                <div class="form-group">
                    <label class="control-label">User Type</label>
                    <div class="selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="userTypeId" id="userTypeId" class="form-control selectpicker">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="control-label">Username</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="username" id="username" placeholder="Username" class="form-control" type="text">
                        </div>
                    </div>
                </div>


                <!-- Text input-->
                <div class="form-group">
                    <label class="control-label">E-Mail</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input name="email" id="email" placeholder="E-Mail Address" class="form-control" type="email">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group ui-corner-all">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="firstname" id="firstname" placeholder="First Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="lastname" id="lastname" placeholder="Last Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="active" id="active" data-error="Before you wreck yourself">
                            Active
                        </label>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
      
                

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>

                </div>

                
            </div>
        </div>
        </form>
    </div>
</div>



